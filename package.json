{
  "name": "ac-heatmap-img",
  "version": "1.0.0",
  "description": "GitHub activity heatmap image generator",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/main.ts",
    "start": "NODE_ENV=production tsx src/main.ts",
    "test": "vitest",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "verify": "pnpm format && pnpm lint && pnpm type-check && pnpm test --run",
    "precommit": "pnpm verify && git add ."
  },
  "keywords": [
    "github",
    "heatmap",
    "activity"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^20.17.47",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "cal-heatmap": "^4.2.4",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "puppeteer": "^24.8.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "d3": "^7.9.0"
  }
}
